@model CalculadoraTempoDeVida.Pessoa

@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<div>
    <h1 class="display-4">Cadastrar Usuário</h1>
</div>
<form asp-controller="Home" asp-action="CadastrarUsuario" method="post" class="Quadro-Tela  ">

    <div class="form-group" style="margin: 10px 0px">
        <label for="nome">Nome:</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    
    <div class="form-group" style="margin: 10px 0px">
        <label for="sobrenome">Data de nascimento:</label>
        <input type="text" asp-for="DataDeNascimento" class="form-control" placeholder="Digite a data de nascimento do usuário">
        @Html.ValidationMessageFor(x => x.DataDeNascimento)
    </div>
    

    <div class="d-grid gap-2" style="margin: 5px 0px">
        <button type="submit" class="btn btn-primary d-lg-block">Adicionar</button>
    </div>
    <div class="d-grid gap-2" style="margin: 5px 0px">
        <a class="btn btn-secondary btn-block" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
    </div>
</form>
